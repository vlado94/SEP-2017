<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<property name="DEV_HOME" value="D:/logging.log" />
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				[%-5level]%d{yyyy-MM-dd HH:mm:ss} - %msg%n
			</Pattern>
		</layout>
	</appender>
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>${DEV_HOME}</file>
		<encoder>
			<Pattern>
				[%-5level]%d{yyyy-MM-dd HH:mm:ss} %logger{36} - %msg%n
			</Pattern>
		</encoder>
	</appender>
	<logger name="external.external.price" level="INFO">
		<appender-ref ref="FILE" />
	</logger>
	<logger name="external.external.paypal" level="INFO">
		<appender-ref ref="FILE" />
	</logger>
	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>
	<logger name="jdbc" level="OFF" />
</configuration>